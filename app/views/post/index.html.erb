
<ol class="breadcrumb">
  <li><%=h link_to "Home", "/" %></li>
  <li><a href="#">Post</a></li>
  <li class="active">index</li>
</ol>

<% if @register_flag %>
<%= link_to 'Register', :controller => "account", :action => "create"  %>
<%= link_to 'Login', :controller => "account", :action => "login"  %>
<% end %>
<% if @register_flag == false %>
<%= link_to 'Logout', :controller => "account", :action => "logout"  %>
<div style="float: right;"> 
Welcome  <%=h @user.username%> 
<%= link_to 'Admin page', :controller => "admin", :action => "index"  %>
</div>
<% end %>
<%= link_to 'New Post', :action => "new"  %>

<p>Number of post <%=h @posts.size %></p>
 <table style="width:100%" class="table">
 <tr>
 	<th>Title</th>
 	<th>Content</th>
 	<th>User</th>
</tr>
<%  @posts.each do |post| %>
<tr><td><%=h link_to(post.title, :action => "view", :post_id => post.id) %>  </td>
	<td><%=h link_to(post.content, :action => "view", :post_id => post.id) %>  </td>
	<td><% if post.user_id %>
	<%=h @users.find(post.user_id).username %>
	<% end %>
	</td>
</tr>
<% end %>
</table> 
